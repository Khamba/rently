<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Rent Price:</strong>
  <%= @product.rent_price %>
</p>

<p>
  <strong>Actual Price:</strong>
  <%= @product.actual_price %>
</p>

<p>
  <strong>Details:</strong>
  <%= @product.details %>
</p>

<p>
  <strong>Last Updated at</strong>
  <%= local_time @product.updated_at %>
</p>

<% @product_images.each do |p| %>
  <%= image_tag p.image_url %>
  <%= link_to "Delete Image", product_image_path(p), method: :delete %>
<% end %>

<br><br>
<%= link_to 'Add Images', add_images_product_path(@product) %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'All Products', products_path %>